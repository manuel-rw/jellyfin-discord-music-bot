{
  "name": "jellyfin-discord-music-bot",
  "version": "1.2.0",
  "description": "A simple and lightweight Discord Bot, that integrates with your Jellyfin Media server and enables you to listen to your favourite music directly from discord.",
  "author": "manuel-rw",
  "private": true,
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch=true",
    "test:cov": "vitest --coverage --watch=false",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/vitest --runInBand --watch=false",
    "test:e2e": "vitest --config ./vitest.e2e.config.ts"
  },
  "engines": {
    "node": ">=24.0",
    "pnpm": ">=10.0"
  },
  "dependencies": {
    "@discord-nestjs/common": "^5.3.2",
    "@discord-nestjs/core": "^5.5.1",
    "@discordjs/builders": "^1.13.0",
    "@discordjs/voice": "^0.19.0",
    "@jellyfin/sdk": "^0.13.0",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/terminus": "^11.0.0",
    "@snazzah/davey": "^0.1.9",
    "axios": "^1.13.2",
    "cron": "^4.3.4",
    "date-fns": "^4.1.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "joi": "^18.0.2",
    "libsodium-wrappers": "^0.7.15",
    "opusscript": "^0.1.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^4.2.1",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.12",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@swc/core": "^1.15.3",
    "@types/cron": "^2.4.3",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.9.3",
    "unplugin-swc": "^1.5.8",
    "vitest": "^4.0.13"
  }
}
